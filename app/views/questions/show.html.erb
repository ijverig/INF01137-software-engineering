<h2>
   <strong><%= @question.title %></strong>
</h2>
 
<p>
  <%= @question.text %>
</p>

<hr>

<table>
  <% @question.answers.each do |a| %>
    <tr>
      <td><%= simple_format a.text %></td>
   </tr>
  <% end %>
</table>

<hr>

<%= form_for [@question, @question.answers.build] do |f| %>
   <p>
      <%= f.text_area :text, :value => 'escreva sua resposta aqui...', :size => '115x20' %>
   </p>

   <p>
      <%= f.submit "responder!", :disable_with => 'respondendo...' %>
   </p>
<% end %>

<hr>

<p>
   <%= link_to "editar", edit_question_path(@question) %> |
   <%= link_to "apagar", question_path(@question), :method => :delete, :data => {:confirm => "Essa pergunta serÃ¡ removida do sistema! Continuar?"} %> |
   <%= link_to "voltar", questions_path %>
</p>
